{
  "compilerOptions": {
    "sourceMap": false,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "removeComments": true,
    "module": "es6",
    "target": "es6",
    "jsx": "react-native",
    "lib": [
      "dom",
      "es2015.promise",
      "es2016",
      "es2017.object"
    ],
    "typeRoots": [
      "@types",
      "node_modules/@types"
    ],
    "outDir": "./dist"
  },
  "include": [
    "./src/**/*"
  ],
}